{
	"include": [
		"env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"postcss.config.mjs",
		".react-router/types/**/*"
	],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ES2022",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"]
		},
		"types": [
			"@react-router/cloudflare",
			"vite/client",
			"./.wrangler/types/runtime"
		],
		"noEmit": true,
		"rootDirs": [".", "./.react-router/types"]
	}
}
